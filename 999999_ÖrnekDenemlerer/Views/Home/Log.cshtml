@model Kullanıcı
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<html>
<head>
    <meta charset="UTF-8">
    <title>Siteye Kayıt Ol</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #e9ebee;
        }

        .container2 {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .registration-form2 {
            width: 500px;
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }

            .registration-form2 h2 {
                text-align: center;
                margin-bottom: 30px;
            }

        .form-group2 {
            margin-bottom: 20px;
        }

            .form-group2 label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            .form-group2 input[type="text"],
            .form-group2 input[type="email"],
            .form-group2 input[type="password"] {
                width: 100%;
                padding: 10px;
                font-size: 16px;
                border: none;
                border-radius: 3px;
                border-bottom: 2px solid #ccc;
            }

                .form-group2 input[type="text"]:focus,
                .form-group2 input[type="email"]:focus,
                .form-group2 input[type="password"]:focus {
                    outline: none;
                    border-color: #0077b5;
                }

        .btn2 {
            display: block;
            width: 100%;
            padding: 10px;
            font-size: 16px;
            color: #fff;
            background-color: #0077b5;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn2:hover {
                background-color: #005f8a;
            }

        .viewbag-message {
            display: flex;
            justify-content: center;
            margin-top: 10px;
        }
    </style>
</head>
<body>
    <div class="container2">
        <form class="registration-form2" action="" method="post">
            <h2>Siteye Kayıt Ol</h2>
            <div class="form-group2">
                <label for="username2">Kullanıcı Adı:</label>
                <input type="text" id="username2" asp-for="KullanıcıAdı" placeholder="Kullanıcı adınızı girin"><br />
                <span asp-validation-for="KullanıcıAdı"></span>
            </div>
            <div class="form-group2">
                <label for="email2">Email:</label>
                <input type="email" id="email2" asp-for="Email" placeholder="E-posta adresinizi girin"><br />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group2">
                <label for="password2">Şifre:</label>
                <input type="password" id="password2" asp-for="Şİfre" placeholder="Şifrenizi girin"> <br />
                <span asp-validation-for="Şİfre"></span>
            </div>
            <div class="form-group2">
                <label for="password2">Şifre Onayla:</label>
                <input type="password" id="password2" name="şifre2" placeholder="Şifrenizi tekrar girin"> <br />
                <span asp-validation-for="Şİfre"></span>
            </div>
            <button type="submit" class="btn2">Kayıt Ol</button>
            <div class="viewbag-message">
                <span>@ViewBag.şifre2hatası</span>
            </div>
            <div class="viewbag-message">
                <span>@ViewBag.KayıtBaşarılı</span>
            </div>
        </form>
    </div>
</body>
</html>

<script>
    setTimeout(function () {
        $('.viewbag-message').fadeOut('fast');
    }, 3000); // 5 saniye sonra mesajlar kaybolacak

</script>