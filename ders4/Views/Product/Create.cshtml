@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers
@model ders4.Models.Product
<script src="~/jquery/jquery.min.js"></script>
<script src="~/jquery-validate/jquery.validate.min.js"></script>
<script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<form asp-controller="Product" asp-action="Create" method="post">
    <input type="text" asp-for="ProductName" placeholder="Product Name" />
    <span asp-validation-for="ProductName"> </span> <br />   @*<span asp-validation-for="ProductName"> </span> hata olursa buradakı mesajıyazdırcak*@
    <input type="number" asp-for="Quentity" placeholder="Quentity" />
    <span asp-validation-for="Quentity"> </span>  <br />
    <input type="email" asp-for="Email" placeholder="Email" />
    <span asp-validation-for="Email"> </span> <br />
    <button>Gonder</button>
</form>

<div asp-validation-summary="All">   @*tum hatalar buraya gelıcektır*@

</div>